<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="MainMenu">
        <control type="group">
            <control type="group">
                <control type="image">
                    <left>430</left>
                    <top>0</top>
                    <width>120</width>
                    <height>1080</height>
                    <texture colordiffuse="background">menu.png</texture>
                </control>
                <control type="panel" id="9000">
                    <left>430</left>
                    <top>0</top>
                    <width>430</width>
                    <height>1080</height>
                    <onright condition="Window.IsActive(home) + !String.IsEmpty(Container(9000).ListItem.Property(widget))">9003</onright>
                    <onright condition="Window.IsActive(settings) | Window.IsActive(systeminfo)">9020</onright>
                    <onright condition="Window.IsActive(videos) | Window.IsActive(music) | Window.IsActive(videoplaylist) | Window.IsActive(musicplaylist) | Window.IsActive(1119) | Window.IsActive(addonbrowser) | Window.IsActive(programs) | Window.IsActive(pictures) | Window.IsActive(eventlog) | Window.IsActive(tvchannels) | Window.IsActive(tvrecordings) | Window.IsActive(tvsearch) | Window.IsActive(tvtimers) | Window.IsActive(musicplaylisteditor) | Window.IsActive(games)">50</onright>
                    <onright condition="Window.IsActive(weather) | Window.IsActive(1121) | Window.IsActive(1122) | Window.IsActive(1123) | Window.IsActive(1124) | Window.IsActive(1125)">305</onright>
                    <onright condition="Window.IsActive(SettingsCategory.xml)">3</onright>
                    <onright condition="Window.IsActive(skinsettings)">9030</onright>
                    <onright condition="Window.IsActive(script-globalsearch-main.xml)">SetFocus(9020)</onright>
                    <onright condition="Window.IsActive(profiles)">2</onright>
                    <onright condition="Window.IsActive(filemanager)">20</onright>
                    <onright condition="Window.IsActive(tvguide)">10</onright>
                    <onright condition="Window.IsActive(script-script.extendedinfo-YoutubeList.xml)">SetFocus(500)</onright>
                    <onleft>SetProperty(SubMenu,true,home)</onleft>
                    <onleft>9010</onleft>
                    <ondown>9000</ondown>
                    <onup>9000</onup>
                    <onclick condition="Windows.IsActive(favourites)">Dialog.Close</onclick>
                    <scrolltime tween="quadratic" easing="out">300</scrolltime>
                    <orientation>Vertical</orientation>
                    <itemlayout height="120" width="430">
                        <control type="image">
                            <top>20</top>
                            <left>20</left>
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="maintext">$INFO[ListItem.Icon]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="120" width="430">
                        <include content="SelectedItemBackground">
                            <param name="Left" value="0" />
                            <param name="Top" value="0" />
                            <param name="Width" value="120" />
                            <param name="Height" value="120" />
                        </include>
                        <control type="image">
                            <top>20</top>
                            <left>20</left>
                            <width>80</width>
                            <height>80</height>
                            <texture colordiffuse="maintext">$INFO[ListItem.Icon]</texture>
                        </control>
                    </focusedlayout>
                    <content>
                        <include>skinshortcuts-mainmenu</include>
                    </content>
                </control>
            </control>
        </control>
    </include>
    <include name="Submenu">
        <control type="group" id="9001">
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>430</width>
                <height>1080</height>
                <texture>dialog.png</texture>
                <colordiffuse>background</colordiffuse>
            </control>
            <control type="panel" id="9010">
                <include>VisibleFadeEffect</include>
                <width>430</width>
                <height>1080</height>
                <onleft>9010</onleft>
                <onright>ClearProperty(SubMenu,home)</onright>
                <onright>9000</onright>
                <onback>ClearProperty(SubMenu,home)</onback>
                <onback>9000</onback>
                <pagecontrol />
                <scrolltime tween="quadratic" easing="out">300</scrolltime>
                <orientation>Vertical</orientation>
                <itemlayout height="120" width="430">
                    <control type="label">
                        <width>430</width>
                        <height>120</height>
                        <font>font_SubMenu</font>
                        <textcolor>maintext</textcolor>
                        <textoffsetx>30</textoffsetx>
                        <selectedcolor>maintext</selectedcolor>
                        <align>right</align>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="430">
                    <include content="SelectedItemBackground">
                        <param name="Left" value="0" />
                        <param name="Top" value="0" />
                        <param name="Width" value="430" />
                        <param name="Height" value="120" />
                    </include>
                    <control type="group">
                        <control type="label">
                            <width>430</width>
                            <height>120</height>
                            <font>font_SubMenu</font>
                            <textcolor>maintext</textcolor>
                            <textoffsetx>30</textoffsetx>
                            <align>right</align>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </control>
                </focusedlayout>
                <content>
                    <include>skinshortcuts-submenu</include>
                </content>
            </control>
            <control type="group">
                <include>VisibleFadeEffect</include>
                <visible>Control.HasFocus(9010)</visible>
                <height>30</height>
                <top>38</top>
                <left>-225</left>
                <control type="label">
                    <visible>Container(9010).HasPrevious</visible>
                    <width>30</width>
                    <height>30</height>
                    <align>center</align>
                    <label>s</label>
                    <font>IconTiny</font>
                    <textcolor>disabled</textcolor>
                </control>
                <control type="label">
                    <visible>Container(9010).HasNext</visible>
                    <top>858</top>
                    <width>30</width>
                    <height>30</height>
                    <align>center</align>
                    <label>t</label>
                    <font>IconTiny</font>
                    <textcolor>disabled</textcolor>
                </control>
            </control>
        </control>
    </include>
</includes>