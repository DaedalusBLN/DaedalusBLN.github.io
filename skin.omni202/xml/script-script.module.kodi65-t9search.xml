<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">9090</defaultcontrol>
    <animation effect="slide" start="508" end="0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
    <animation effect="slide" start="0" end="508" time="300" tween="quadratic" easing="out">WindowClose</animation>
    <coordinates>
        <system>1</system>
        <left>1412</left>
        <top>0</top>
    </coordinates>
    <controls>
        <control type="image">
            <width>508</width>
            <height>1080</height>
            <texture colordiffuse="background">$VAR[CommonBackgroundOverlay]</texture>
        </control>
        <control type="image">
            <left>8</left>
            <width>500</width>
            <height>1080</height>
            <texture colordiffuse="background">dialog.png</texture>
        </control>
        <control type="panel" id="9090">
            <left>58</left>
            <top>50</top>
            <width>400</width>
            <height>300</height>
            <onleft>9090</onleft>
            <onright>9090</onright>
            <onup condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,999)</onup>
            <ondown condition="Integer.IsGreater(Container(9091).NumItems,0)">Control.SetFocus(9091,0)</ondown>
            <orientation>vertical</orientation>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <itemlayout height="100" width="100">
                <control type="image">
                    <left>5</left>
                    <top>5</top>
                    <width>90</width>
                    <height>90</height>
                    <texture colordiffuse="33787878">selecteditem_bg.png</texture>
                </control>
                <control type="label">
                    <left>5</left>
                    <top>-10</top>
                    <width>90</width>
                    <height>90</height>
                    <align>center</align>
                    <font>font12</font>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <left>5</left>
                    <top>20</top>
                    <width>90</width>
                    <height>90</height>
                    <align>center</align>
                    <font>font10</font>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </itemlayout>
            <focusedlayout height="100" width="100">
                <include content="SelectedItemBackground">
                    <param name="Left" value="5" />
                    <param name="Top" value="5" />
                    <param name="Width" value="90" />
                    <param name="Height" value="90" />
                </include>
                <control type="label">
                    <left>5</left>
                    <top>-10</top>
                    <width>90</width>
                    <height>90</height>
                    <align>center</align>
                    <font>font12</font>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <left>5</left>
                    <top>20</top>
                    <width>90</width>
                    <height>90</height>
                    <align>center</align>
                    <font>font10</font>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </focusedlayout>
        </control>
        <control type="label" id="600">
            <left>58</left>
            <top>365</top>
            <width>400</width>
            <height>50</height>
            <align>center</align>
            <textoffsetx>15</textoffsetx>
            <scroll>true</scroll>
            <scrollspeed>20</scrollspeed>
        </control>
        <control type="list" id="9091">
            <left>58</left>
            <top>430</top>
            <width>400</width>
            <height>550</height>
            <onleft>9091</onleft>
            <onright>9091</onright>
            <onup>9090</onup>
            <ondown>9090</ondown>
            <orientation>vertical</orientation>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <itemlayout height="55" width="390">
                <control type="label">
                    <width>390</width>
                    <height>55</height>
                    <align>center</align>
                    <font>font12</font>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout height="55" width="390">
                <control type="label">
                    <width>390</width>
                    <height>55</height>
                    <align>center</align>
                    <font>font12</font>
                    <textcolor>highlight</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>
