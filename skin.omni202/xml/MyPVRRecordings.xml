<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>50</defaultcontrol>
    <menucontrol>9051</menucontrol>
    <onload>ClearProperty(MediaMenu,home)</onload>
    <onunload>ClearProperty(MediaMenu,home)</onunload>
    <allowoverlay>no</allowoverlay>
    <controls>
        <include>CommonBackground</include>
        <control type="group">
            <include>MenuSlideAnimation</include>
            <top>0</top>
            <left>-430</left>
            <control type="group">
                <description>Recordings group</description>
                <visible>Control.IsVisible(50)</visible>
                <include>Animation.Common</include>
                <top>180</top>
                <left>655</left>
                <control type="panel" id="50">
                    <width>1000</width>
                    <height>840</height>
                    <onleft>9000</onleft>
                    <onright condition="Container(50).HasPrevious | Container(50).HasNext">60</onright>
                    <onright condition="!Container(50).HasPrevious + !Container(50).HasNext">SetProperty(MediaMenu,true,home)</onright>
                    <onright condition="!Container(50).HasPrevious + !Container(50).HasNext">SetFocus(9050)</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <viewtype label="535">list</viewtype>
                    <pagecontrol>60</pagecontrol>
                    <scrolltime tween="quadratic">200</scrolltime>
                    <itemlayout height="120" width="1000">
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>100</width>
                            <height>100</height>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.ActualIcon]</texture>
                        </control>
                        <control type="label">
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                            <left>140</left>
                            <top>3</top>
                            <right>80</right>
                            <height>70</height>
                            <font>font30</font>
                            <selectedcolor>highlight</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <visible>String.IsEmpty(ListItem.Label2)</visible>
                            <left>140</left>
                            <top>3</top>
                            <right>80</right>
                            <height>110</height>
                            <font>font30</font>
                            <selectedcolor>highlight</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                            <top>52</top>
                            <left>140</left>
                            <right>80</right>
                            <height>60</height>
                            <selectedcolor>highlight</selectedcolor>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                        <include content="OverlayList">
                            <param name="OverlayListTop" value="28" />
                            <param name="OverlayListWidth" value="1000" />
                        </include>
                    </itemlayout>
                    <focusedlayout height="120" width="1000">
                        <include content="SelectedItemBackground">
                            <param name="Left" value="0" />
                            <param name="Top" value="0" />
                            <param name="Width" value="1000" />
                            <param name="Height" value="120" />
                        </include>
                        <control type="image">
                            <width>120</width>
                            <height>120</height>
                            <texture>overlays/diffuse-overlay.png</texture>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>100</width>
                            <height>100</height>
                            <aspectratio align="center" aligny="center">keep</aspectratio>
                            <texture background="true">$INFO[ListItem.ActualIcon]</texture>
                        </control>
                        <control type="label">
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                            <left>140</left>
                            <top>3</top>
                            <right>80</right>
                            <height>70</height>
                            <font>font30</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <visible>String.IsEmpty(ListItem.Label2)</visible>
                            <left>140</left>
                            <top>3</top>
                            <right>80</right>
                            <height>110</height>
                            <font>font30</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <visible>!String.IsEmpty(ListItem.Label2)</visible>
                            <top>52</top>
                            <left>140</left>
                            <right>80</right>
                            <height>60</height>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                        <include content="OverlayList">
                            <param name="OverlayListTop" value="28" />
                            <param name="OverlayListWidth" value="1000" />
                        </include>
                    </focusedlayout>
                </control>
                <control type="grouplist">
                    <left>1030</left>
                    <itemgap>15</itemgap>
                    <control type="image">
                        <width>570</width>
                        <height>321</height>
                        <aspectratio align="center" aligny="center">scale</aspectratio>
                        <texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        <fadetime>IconCrossfadeTime</fadetime>
                        <visible>!String.IsEmpty(ListItem.Art(thumb))</visible>
                    </control>
                    <control type="textbox">
                        <description>Description</description>
                        <visible>!String.IsEmpty(ListItem.Plot)</visible>
                        <width>570</width>
                        <height>550</height>
                        <font>font14_textbox</font>
                        <label>$INFO[ListItem.Plot]$INFO[ListItem.Date, (,)]</label>
                        <include>AutoscrollDefault</include>
                    </control>
                </control>
            </control>
            <control type="scrollbar" id="60">
                <visible allowhiddenfocus="true">Control.HasFocus(60) | Container.Scrolling</visible>
                <left>2340</left>
                <top>120</top>
                <width>10</width>
                <height>960</height>
                <onleft>50</onleft>
                <onright>SetProperty(MediaMenu,true,home)</onright>
                <onright>SetFocus(9050)</onright>
                <orientation>vertical</orientation>
            </control>
            <include>Submenu</include>
            <include>MainMenu</include>
            <include>Topbar</include>
            <include>PVRMediaMenu</include>
        </control>
    </controls>
</window>