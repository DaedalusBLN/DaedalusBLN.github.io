            <include>View_51_Fanart</include>
            <!-- view id = 51 -->
            <include>View_52_Music</include>
            <!-- view id = 52 -->
            <include>View_500_Wall</include>
            <!-- view id = 500 -->
            <include>View_501_Landscape</include>
            <!-- view id = 501 -->
            <control type="group">
                <left>2350</left>
                <include>SideBladeRight</include>
                <control type="grouplist" id="9050">
