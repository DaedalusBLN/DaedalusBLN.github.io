<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">202</defaultcontrol>
    <visible>Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(Visualisation)</visible>
    <coordinates>
        <system>1</system>
        <left>0</left>
        <top>0</top>
    </coordinates>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,-108" end="0,0" time="240" tween="quadratic">WindowOpen</animation>
            <animation effect="slide" end="0,-108" start="0,0" time="240" tween="quadratic">WindowClose</animation>
            <control type="image">
                <width>1920</width>
                <height>108</height>
                <texture colordiffuse="background">$VAR[CommonBackgroundOverlay]</texture>
            </control>
            <control type="image">
                <width>1920</width>
                <height>100</height>
                <texture colordiffuse="background">dialog.png</texture>
            </control>
            <control type="grouplist" id="202">
                <height>100</height>
                <width>FullScreenWidth</width>
                <align>center</align>
                <itemgap>0</itemgap>
                <scrolltime tween="sine">200</scrolltime>
                <orientation>horizontal</orientation>
                <onup>700</onup>
                <ondown>707</ondown>
                <onleft>202</onleft>
                <onright>202</onright>
                <control type="button" id="700">
                    <label>E</label>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>Close</onclick>
                    <onclick condition="Player.HasAudio">ActivateWindow(MusicPlaylist)</onclick>
                    <onclick condition="Player.HasVideo">ActivateWindow(VideoPlaylist)</onclick>
                </control>
                <control type="button" id="600">
                    <label>g</label>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>PlayerControl(Previous)</onclick>
                </control>
                <control type="button" id="601">
                    <label>H</label>
                    <textoffsetx>32</textoffsetx>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>PlayerControl(Rewind)</onclick>
                </control>
                <control type="togglebutton" id="602">
                    <label>K</label>
                    <altlabel>I</altlabel>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
                    <onclick>PlayerControl(Play)</onclick>
                </control>
                <control type="button" id="603">
                    <label>J</label>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>PlayerControl(Stop)</onclick>
                </control>
                <control type="button" id="604">
                    <label>G</label>
                    <align>right</align>
                    <textoffsetx>32</textoffsetx>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>PlayerControl(Forward)</onclick>
                </control>
                <control type="button" id="605">
                    <label>f</label>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconSmall</font>
                    <onclick>PlayerControl(Next)</onclick>
                </control>
                <control type="togglebutton" id="704">
                    <label>N</label>
                    <altlabel>M</altlabel>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconMedium</font>
                    <usealttexture>Playlist.IsRandom</usealttexture>
                    <onclick>PlayerControl(Random)</onclick>
                </control>
                <control type="button" id="708">
                    <label>$VAR[MusicOSDRepeatButtonVar]</label>
                    <align>center</align>
                    <width>100</width>
                    <height>100</height>
                    <font>IconMedium</font>
                    <onclick>PlayerControl(Repeat)</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>