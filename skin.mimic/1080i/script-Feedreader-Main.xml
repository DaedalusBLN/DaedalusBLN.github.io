<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window type="window">
    <controls>
        <control type="image">
            <animation effect="fade" time="2000" start="0" end="100">WindowOpen</animation>
            <include>FullscreenDimensions</include>
            <texture>black.png</texture>
        </control>
        <control type="image" id="30001">
            <description>Background image</description>
            <colordiffuse>FF555555</colordiffuse>
            <aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
            <include>FullscreenDimensions</include>
            <texture />
            <fadetime>2000</fadetime>
            <animation effect="zoom" start="110" end="130" center="auto" time="10000" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
            <animation effect="slide" start="-30,-30" end="30,30" time="6000" tween="sine" easing="inout" pulse="true" condition="true">Conditional</animation>
        </control>

        <control type="image" id="30006">
            <description>image</description>
            <visible>true</visible>
            <left>1370</left>
            <top>530</top>
            <aspectratio scalediffuse="false" align="right" aligny="bottom">keep</aspectratio>
            <fadetime>1000</fadetime>
            <width>500</width>
            <height>500</height>
            <texture />
        </control>       

        <control type="label" id="30002">
            <description>Headline</description>
            <left>20</left>
            <top>20</top>
            <width>800</width>
            <visible>false</visible>
            <align>center</align>
            <aligny>top</aligny>
            <scroll>true</scroll>
            <label />
            <font>font30</font>
            <textcolor>FFF5B2D4</textcolor>
            <shadowcolor>ff000000</shadowcolor>
            <wrapmultiline>true</wrapmultiline>
            <scrollspeed>50</scrollspeed>
            <scrollsuffix> - </scrollsuffix>
        </control>

        <control type="textbox" id="30007">
            <description>Clock</description>
            <left>840</left>
            <top>20</top>
            <width>420</width>
            <visible>false</visible>
            <align>right</align>
            <aligny>top</aligny>
            <textcolor>88FFFFFF</textcolor>
            <shadowcolor>88000000</shadowcolor>
            <label />
        </control>

        <control type="textbox" id="30004">
             <description>Date</description>
             <left>840</left>
             <top>670</top>
             <width>420</width>
             <height>50</height>
             <visible>false</visible>
             <align>center</align>
             <aligny>bottom</aligny>
             <textcolor>88FFFFFF</textcolor>
             <shadowcolor>66000000</shadowcolor>
             <label />
        </control>

        <control type="textbox" id="30003">
             <description>Content</description>
             <left>20</left>
             <top>100</top>
             <width>800</width>
             <height>620</height>
             <visible>false</visible>
             <aligny>top</aligny>
             <textcolor>FFFFFFFF</textcolor>
             <shadowcolor>66000000</shadowcolor>
             <autoscroll delay="3000" time="1500" repeat="10000">!Skin.HasSetting(Disable.AutoScroll)</autoscroll>
             <label>...</label>
        </control>

        <control type="textbox" id="30005">
             <description>Debug</description>
             <left>840</left>
             <top>40</top>
             <width>420</width>
             <height>640</height>
             <visible>false</visible>
             <align>left</align>
             <aligny>bottom</aligny>
             <textcolor>FFFF7777</textcolor>
             <shadowcolor>A6000000</shadowcolor>
             <label />
        </control>

    </controls>
</window>