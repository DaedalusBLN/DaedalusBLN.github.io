<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="126">
    <defaultcontrol always="true">450</defaultcontrol>


    <controls>

        <include>Global_Overlay</include>

        <control type="group">
            <include>Dialog_Standard_Group</include>
            
            <control type="label" id="411">
                <include>Dialog_Standard_Header</include>
                <label>1023</label>
            </control>

            <control type="label" id="412">
                <description>Path</description>
                <bottom>10</bottom>
                <height>84</height>
                <aligny>center</aligny>
                <left>30</left>
                <width>750</width>
                <haspath>true</haspath>
                <font>Tiny</font>
                <textcolor>dialog_fg_70</textcolor>
            </control>

            <!-- Selection List -->
            <control type="panel" id="450">
                <include>Dialog_Standard_List_Left</include>
                <onleft>8000</onleft>
                <onright>60</onright>
                <onup>450</onup>
                <ondown>450</ondown>
                <pagecontrol>60</pagecontrol>
                <itemlayout height="138" width="700">
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                    </control>
                    <control type="label">
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.AddonSummary)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <label>$INFO[ListItem.AddonSummary]</label>
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </itemlayout>
                <focusedlayout height="138" width="700">
                    <control type="image">
                        <width>100%</width>
                        <height>135</height>
                        <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <include>Dialog_Standard_List_Left_Icon</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.AddonSummary)">Conditional</animation>
                        <include>Dialog_Standard_List_Left_Label</include>
                    </control>
                    <control type="label">
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <label>$INFO[ListItem.AddonSummary]</label>
                        <include>Dialog_Standard_List_Left_Label2</include>
                    </control>
                </focusedlayout>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="8000">
                <include>Dialog_Standard_Right_Grouplist</include>
                <onright>60</onright>
                <onleft>450</onleft>
                <control type="button" id="413">
                    <description>Ok</description>
                    <label>186</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
                <control type="button" id="414">
                    <description>Cancel</description>
                    <label>222</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
                <control type="button" id="415">
                    <description>Create Folder</description>
                    <label>119</label>
                    <include>Dialog_Standard_Right_Buttons</include>
                </control>
            </control>

            <!-- Big Image -->
            <control type="group">
                <centerright>190</centerright>
                <top>357</top>
                <width>300</width>
                <height>450</height>
                <control type="image">
                    <texture>$INFO[Container(450).ListItem.Icon]</texture>
                    <aspectratio align="center" aligny="bottom">keep</aspectratio>
                </control>
            </control>

            <!-- Separator -->
            <control type="image">
                <left>699</left>
                <top>120</top>
                <height>687</height>
                <width>1</width>
                <texture colordiffuse="dialog_fg_12">common/white.png</texture>
                <visible>!Control.IsVisible(60)</visible>
            </control>
            <control type="scrollbar" id="60">
                <orientation>vertical</orientation>
                <left>700</left>
                <width>8</width>
                <top>120</top>
                <height>687</height>
                <onleft>450</onleft>
                <onright>8000</onright>
                <visible>Control.IsVisible(450)</visible>
                <texturesliderbackground colordiffuse="dialog_fg_12">osd/progress-end.png</texturesliderbackground>
                <texturesliderbar colordiffuse="dialog_fg_12">osd/progress-end.png</texturesliderbar>
            </control>

        </control>
    </controls>
</window>
