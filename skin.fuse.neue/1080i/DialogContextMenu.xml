                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,7)">Conditional</animation>
                <centerleft>50%</centerleft>
                <bottom>560</bottom>
                <width>48</width>
                <height>24</height>
                <texture  colordiffuse="dialog_bg_100">common/contextboxarrow.png</texture>
                <animation effect="slide" end="-150" condition="!Skin.HasSetting(ContextPosition) | String.IsEmpty(Window(Home).Property(ViewType))">Conditional</animation>
            </control>
            
        </control>
    </controls>

</window>
