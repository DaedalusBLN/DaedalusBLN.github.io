            </control>

            <!-- Nib -->
            <control type="image">
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,0)">Conditional</animation>
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,1)">Conditional</animation>
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,2)">Conditional</animation>
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,3)">Conditional</animation>
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,4)">Conditional</animation>
                <animation effect="slide" end="0,70" condition="Integer.IsGreater(Container(996).NumItems,5)">Conditional</animation>
