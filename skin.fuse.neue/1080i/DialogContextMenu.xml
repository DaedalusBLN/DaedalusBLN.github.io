<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="106">
    <defaultcontrol always="true">1000</defaultcontrol>


    <coordinates>
        <origin x="0" y="0" />
    </coordinates>

    <controls>
        <include>Global_Overlay</include>
        <control type="group">
            <centerleft>1226</centerleft>
            <centertop>392</centertop>
            <include>Animation_FadeIn_SlideUp</include>
            <include>Animation_FadeOut</include>
            <width>466</width>
            <height>592</height>
            <animation effect="slide" end="-980,330" condition="!Skin.HasSetting(ContextPosition) | String.IsEmpty(Window(Home).Property(ViewType))">Conditional</animation>

            <!-- Poster View Move -->
            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsLess(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsLess(Window(Home).Property(ContextPosition),2)">Conditional</animation>
            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsLess(Window(Home).Property(ContextPosition),3)">Conditional</animation>
            <animation effect="slide" end="178"  condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextPosition),3)">Conditional</animation>
            <animation effect="slide" end="178"  condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextPosition),4)">Conditional</animation>
            <animation effect="slide" end="178"  condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextPosition),5)">Conditional</animation>

            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextModifier),0)">Conditional</animation>
            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextModifier),1)">Conditional</animation>
            <animation effect="slide" end="-178" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Posters) + Integer.IsGreater(Window(Home).Property(ContextModifier),2)">Conditional</animation>

            <!-- Tiles View Move -->
            <animation effect="slide" end="-415.33" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Tiles) + Integer.IsLess(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="415.33"  condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Tiles) + Integer.IsGreater(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="0,128.5" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Tiles) + Integer.IsEqual(Window(Home).Property(ContextRow),1)">Conditional</animation>

            <!-- Landscape View Move -->
            <animation effect="slide" end="-415.33" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Landscape) + Integer.IsLess(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="415.33"  condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Landscape) + Integer.IsGreater(Window(Home).Property(ContextPosition),1)">Conditional</animation>

            <animation effect="slide" end="-415.33" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Landscape) + Integer.IsGreater(Window(Home).Property(ContextModifier),0)">Conditional</animation>

            <!-- Square View Move -->
            <animation effect="slide" end="-103.83" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square)">Conditional</animation>
            <animation effect="slide" end="-207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsLess(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="-207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsLess(Window(Home).Property(ContextPosition),2)">Conditional</animation>
            <animation effect="slide" end="207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsGreater(Window(Home).Property(ContextPosition),2)">Conditional</animation>
            <animation effect="slide" end="207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsGreater(Window(Home).Property(ContextPosition),3)">Conditional</animation>
            <animation effect="slide" end="207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsGreater(Window(Home).Property(ContextPosition),4)">Conditional</animation>

            <animation effect="slide" end="-207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsGreater(Window(Home).Property(ContextModifier),0)">Conditional</animation>
            <animation effect="slide" end="-207.66" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),Square) + Integer.IsGreater(Window(Home).Property(ContextModifier),1)">Conditional</animation>

            <!-- List View Move -->
            <animation effect="slide" end="-400,-18" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),List)">Conditional</animation>
            <animation effect="slide" end="0,64.25" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),List) + Integer.IsGreater(Window(Home).Property(ContextPosition),0)">Conditional</animation>
            <animation effect="slide" end="0,64.25" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),List) + Integer.IsGreater(Window(Home).Property(ContextPosition),1)">Conditional</animation>
            <animation effect="slide" end="0,64.25" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),List) + Integer.IsGreater(Window(Home).Property(ContextPosition),2)">Conditional</animation>
            <animation effect="slide" end="0,64.25" condition="Skin.HasSetting(ContextPosition) + String.IsEqual(Window(Home).Property(ViewType),List) + Integer.IsGreater(Window(Home).Property(ContextPosition),3)">Conditional</animation>

            <!-- Correct Position for Num Items -->
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,2)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,3)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,4)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,5)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,6)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,7)">Conditional</animation>
            <animation effect="slide" end="0,70" condition="Integer.IsLess(Container(996).NumItems,8)">Conditional</animation>

            
            <control type="image" id="999">
                <description>background image</description>
                <bottom>0</bottom>
                <width>466</width>
                <height>592</height>
                <texture border="16" colordiffuse="dialog_bg_100">common/rounded-shadow8.png</texture>
            </control>
            <control type="grouplist" id="996">
                <description>grouplist for context buttons</description>
                <left>8</left>
                <bottom>16</bottom>
                <width>450</width>
                <height>560</height>
                <itemgap>0</itemgap>
