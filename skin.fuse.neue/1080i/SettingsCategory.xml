<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="12">
    <defaultcontrol always="true">3</defaultcontrol>
    <include>Defs_SettingsOnload</include>
    <onunload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(startup.init)</onunload>
    <controls>

        <include>Global_Background_Settings</include>

        <!-- GroupList -->
        <control type="group">
            <include>Dialog_Settings_Panel</include>

            <control type="group">
                <left>16</left>
                <right>16</right>
                <top>8</top>
                <bottom>8</bottom>
                <!-- Right Group -->
                <control type="grouplist" id="5">
                    <description>Control Area</description>
                    <left>450</left>
                    <right>0</right>
                    <top>140</top>
                    <bottom>80</bottom>
                    <itemgap>0</itemgap>
                    <onleft>3</onleft>
                    <onup>noop</onup>
                    <ondown>noop</ondown>
                    <onback>300</onback>
                    <onright>SetFocus(300,5)</onright>
                    <orientation>vertical</orientation>
                </control>

                <!-- Left Group -->
                <control type="grouplist" id="3">
                    <description>Button Area</description>
                    <width>450</width>
                    <top>140</top>
                    <bottom>0</bottom>
                    <itemgap>0</itemgap>
                    <onback>300</onback>
                    <onright>5</onright>
                    <onup>20</onup>
                    <ondown>noop</ondown>
                    <onleft>SetFocus(300,0)</onleft>
                    <orientation>vertical</orientation>
                </control>

                <!-- Lines -->
                <control type="image">
                    <top>10</top>
                    <left>450</left>
                    <width>1</width>
                    <bottom>10</bottom>
                    <colordiffuse>dialog_fg_12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>

                <!-- Arrows -->
                <control type="image">
                    <visible>Container(5).HasPrevious</visible>
                    <centerright>735</centerright>
                    <centertop>45</centertop>
                    <width>16</width>
                    <height>16</height>
                    <texture flipy="true" colordiffuse="panel_fg_70">common/arrow-small.png</texture>
                </control>
                <control type="image">
                    <visible>Container(5).HasNext</visible>
                    <centerright>735</centerright>
                    <centerbottom>45</centerbottom>
                    <width>16</width>
                    <height>16</height>
                    <texture colordiffuse="panel_fg_70">common/arrow-small.png</texture>
                </control>


                <!-- Header -->
                <control type="label">
                    <left>50</left>
                    <width>390</width>
                    <top>15</top>
                    <height>70</height>
                    <font>MediumBold</font>
                    <label>5</label>
                    <textcolor>panel_fg_100</textcolor>
                </control>
                <control type="button" id="20">
                    <left>50</left>
                    <right>50</right>
                    <top>77</top>
                    <height>30</height>
                    <font>Tiny</font>
                    <textcolor>panel_fg_70</textcolor>
                    <align>left</align>
                    <textoffsetx>0</textoffsetx>
                    <texturenofocus/>
                    <texturefocus/>
                    <focusedcolor>$VAR[ColorHighlight]</focusedcolor>
                    <ondown>3</ondown>
                    <onback>300</onback>
                    <onright>5</onright>
                    <onup>302</onup>
                    <onclick>SettingsLevelChange</onclick>
                </control>
                <control type="label">
                    <left>500</left>
                    <width>390</width>
                    <top>15</top>
                    <height>70</height>
                    <font>MediumBold</font>
                    <label>$VAR[Label_Settings_Header]</label>
                    <textcolor>panel_fg_100</textcolor>
                </control>
                <control type="label" id="6">
                    <left>500</left>
                    <right>30</right>
                    <top>87</top>
                    <height>20</height>
                    <font>Tiny</font>
                    <textcolor>panel_fg_70</textcolor>
                    <scroll>true</scroll>
                </control>
            </control>
        </control>

        <control type="button" id="7">
            <description>Default Button</description>
            <onback>300</onback>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <onback>300</onback>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <onback>300</onback>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="togglebutton" id="10">
            <width>450</width>
            <description>Default Category Button</description>
            <onback>300</onback>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="label" id="14">
            <textoffsetx>50</textoffsetx>
            <font>font_button</font>
            <textcolor>panel_fg_30</textcolor>
            <include>Defs_Settings_Button</include>
        </control>

        <!-- Standard Furniture -->
        <include>Topbar</include>
        <include>Bottombar</include>
        <include>Statusbar</include>

    </controls>

</window>
